@* This is a Search Component*@
<MudForm>
       <MudTextField Class="d-inline" Intermediate="true" HelperText="@filter" @bind-Value="filter"
                     Label="Search for .... " style="inline-size" FullWidth="false" Variant="Variant.Outlined" Adornment="Adornment.End" AdornmentIcon="@Icons.Filled.Search"
                     AdornmentColor="Color.Secondary" Clearable="true" />
        
</MudForm>
@code {
    public string? filter { get; set; }
    [Parameter]
    public EventCallback<string> OnSearch { get; set; }
    public void HandleSearch(string filter)
    {
        OnSearch.InvokeAsync(filter);
    }
}
