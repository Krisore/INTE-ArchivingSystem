@using Microsoft.AspNetCore.Components.Authorization
@page "/siginUser"
@inject IDialogService DialogService
        <MudCard Elevation="0">
        <MudCardHeader>
            <CardHeaderAvatar>
                <MudAvatar Style="height:70px; width:70px;" Image="/img/Pup_logo.jpg"></MudAvatar>
            </CardHeaderAvatar>
            <CardHeaderContent>
                <MudText Typo="Typo.body1"> Polytechnic University of the Philippines</MudText>
                <MudText Typo="Typo.caption"> Biñan Campus</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudDivider Class="mb-1" />
        <MudCardMedia Image="/img/pup12.jpg" />
        <MudDivider Class="mt-1" />
    <MudCardContent Class="justify-center">
            <MudText Typo="Typo.caption" Align="Align.Justify"> PUPBC Archivie. is a system that will assist in the
                transition from a traditional file cabinet
                system to an electronic-based archiving system.🚀</MudText>
            <MudDivider Class="my-4" />
            <MudText Typo="Typo.body2" Class="mt-4" Align="Align.Center"> Sign In as a </MudText>
        </MudCardContent>
        <MudCardActions Class="d-flex inline justify-center align-center">
        <MudButton Size="Size.Large"  StartIcon="@Icons.Rounded.Person" Class="rounded-0 mr-2" Variant="Variant.Filled"
                Color="Color.Primary" DisableElevation="true" Href="authentication/login">
                Student
            </MudButton>
            <MudText Typo="Typo.caption"> or </MudText>
            <MudButton Size="Size.Large" StartIcon="@Icons.Rounded.People" Variant="Variant.Outlined" Color="Color.Secondary"
                   DisableElevation="true" Class="ml-2 rounded-0" OnClick="@((e) => BeginLogin(Dialog))">
                Archivist</MudButton>
        </MudCardActions>
        <MudText Class="d-flex inline justify-center align-center" Typo="Typo.caption"> This system is on Beta ⚠️
        </MudText>
    </MudCard>

@code {
    private DialogOptions Dialog = new DialogOptions(){
            CloseButton = true,
            NoHeader = false
    };
    protected void BeginLogin(DialogOptions Dialog)
    {
        DialogService.Show<LoginForm>();
    }
}
